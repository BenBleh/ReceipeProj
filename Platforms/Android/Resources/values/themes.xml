<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- App theme for light (day) mode -->
  <style name="Theme.Maui" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Use the maui_status_bar_color defined in values/colors.xml -->
    <item name="android:statusBarColor">@color/maui_status_bar_color</item>
    <!-- true = dark icons/text on status bar (for light status bar background) -->
    <item name="android:windowLightStatusBar">true</item>
  </style>
</resources>